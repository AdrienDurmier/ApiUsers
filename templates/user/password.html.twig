{% extends 'back.html.twig' %}

{% block title %}Changement du mot de passe de l'utilisateur {{ user.username }}{% endblock %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-2">
        <h1 class="h3 mb-0 text-gray-200">Changement du mot de passe de l'utilisateur {{ user.username }}</h1>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('user.index') }}">Gestion des utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Changement du mot de passe de l'utilisateur {{ user.username }}</li>
        </ol>
    </nav>

    <hr>

    <form action="#" method="post" enctype="multipart/form-data">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <div class="h6 m-0 font-weight-bold text-light">Changement du mot de passe</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="password">Mot de passe <span class="text-danger">*</span></label>
                    <input id="password" name="password" type="text" class="form-control form-control-sm" required>
                </div>
            </div>
        </div>

        <hr>

        <div class="input-group mb-3">
            <button class="btn btn-success" type="submit">
                <i class="far fa-save"></i>&nbsp;Enregistrer
            </button>
        </div>

    </form>

{% endblock %}